{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es6",
    "outDir": "./lib/typescript"
  },
  "exclude": [
    "**/__tests__",
    "**/__fixtures__",
    "**/__mocks__",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
} 